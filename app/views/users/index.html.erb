    <h1>List of users</h1>

<form action="/insert_user" method="post">
  <label for="browser_username">Username</label>
  <input id="browser_username" type="text" name="query_name" placeholder="Enter a username...">

  <button>Add user</button>
</form>

<hr>

<table class="table" border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.id %>
      </td>

      <td>
        <%= user.username %>
      </td>

      <td>
        <a href="/users/<%= user.username %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

